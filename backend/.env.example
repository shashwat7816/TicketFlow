PORT=4000
# Example MongoDB Atlas URI (replace <user>, <pass>, <cluster> and <dbname>)
# MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=mongodb://mongo:27017/ticketflow
